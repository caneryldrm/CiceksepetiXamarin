<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.Views.Page5"
                          xmlns:vm="clr-namespace:App4.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:Page1ViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <Grid    >
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="3*"  />
                <ColumnDefinition  Width="7*"  />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />


            </Grid.RowDefinitions>
            <ScrollView>
                <StackLayout  HorizontalOptions="End" Grid.Column="0"  Grid.Row="0"  BackgroundColor="LightGray">


                    <ImageButton Scale="0.7"  BackgroundColor="LightGray" Clicked="Button_clicked1" Source="flower.png"  HorizontalOptions="Start" CornerRadius="22"/>

                    <Label HorizontalTextAlignment="Center" Text="ÇİÇEK" />

                    <ImageButton Scale="0.7"  BackgroundColor="LightGray"  Clicked="Button_clicked2" Source="responsive.png"  HorizontalOptions="Start" CornerRadius="22"/>
                    <Label HorizontalTextAlignment="Center"  Text="ELEKTRONİK" />
                    <ImageButton Scale="0.7" BackgroundColor="LightGray" Clicked="Button_clicked3" Source="birthdaycake.png"  HorizontalOptions="Start" CornerRadius="22"/>
                    <Label HorizontalTextAlignment="Center"  Text="DOĞUM GÜNÜ" />
                    <ImageButton Scale="0.7" BackgroundColor="LightGray" Clicked="Button_clicked4" Source="gift.png"  HorizontalOptions="Start" CornerRadius="22"/>
                    <Label HorizontalTextAlignment="Center"  Text="HEDİYE" />
                    <ImageButton Scale="0.7" BackgroundColor="LightGray" Clicked="Button_clicked5" Source="fashion.png"  HorizontalOptions="Start" CornerRadius="22"/>
                    <Label HorizontalTextAlignment="Center"  Text="MODA" />





                </StackLayout>
            </ScrollView>
            <ScrollView Grid.Column="1" Grid.Row="0" >
                <StackLayout  Grid.Column="1" Grid.Row="0"  Spacing="1"  VerticalOptions="StartAndExpand" Margin="45" Scale="1.2" Padding="0" Orientation="Vertical"     BackgroundColor="LightGray">

                    <Button BackgroundColor="White" FontAttributes="Bold" TextColor="Black" Text="MODA" />
                    <Button Clicked="Ayakkabı" BackgroundColor="White" TextColor="Black" Text="AYAKKABI" />
                    <Button Clicked="Canta" BackgroundColor="White" TextColor="Black" Text="ÇANTA" />
                    <Button Clicked="Giyim" BackgroundColor="White" TextColor="Black" Text="GİYİM" />
                    <Button Clicked="Takı" BackgroundColor="White" TextColor="Black" Text="TAKI" />
                    <Button Clicked="Parfum" BackgroundColor="White" TextColor="Black" Text="PARFÜM" />
                    <Button  BackgroundColor="White" TextColor="Black" Text="BEBEK" />
                    <Button  BackgroundColor="White" TextColor="Black" Text="SPOR" />
                    <Button  BackgroundColor="White" TextColor="Black" Text="SAAT" />










                </StackLayout>
            </ScrollView>


        </Grid>






    </ContentPage.Content>
</ContentPage>

